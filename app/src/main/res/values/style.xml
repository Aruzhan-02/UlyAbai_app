<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="et_login_form">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textSize">18dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:fontFamily">@font/averta_thin</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.White" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@android:color/white</item>
    </style>
    
    <style name="toolbar_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/purple_2</item>

    </style>

    <style name="toolbar_title">
        <item name="android:id">@id/toolbar_title</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/averta_semibold</item>
    </style>
</resources>